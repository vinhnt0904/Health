<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
      .edit-button {
        display: inline-block;
        padding: 8px 12px;
        margin: 4px;
        text-decoration: none;
        background-color: #007bff;
        color: white;
        border-radius: 4px;
        cursor: pointer;
      }
      .delete-button {
        display: inline-block;
        padding: 8px 12px;
        margin: 4px;
        text-decoration: none;
        background-color: #dc3545;
        color: white;
        border-radius: 4px;
        cursor: pointer;
      }
      .edit-button:hover,
      .delete-button:hover {
        opacity: 0.8;
      }
    </style>
  </head>
  <body>
    <h2>get CRUD from view</h2>

    <table>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(var i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a
            href="/edit-crud?id=<%= dataTable[i].id %>"
            class="edit-button"
            type="button"
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%= dataTable[i].id %>"
            class="delete-button"
            type="button"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
